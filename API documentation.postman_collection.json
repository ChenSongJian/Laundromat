	"item": [
		{
			"name": "Washing Machine Endpoints",
			"item": [
				{
					"name": "Get Info By Id",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1"
							]
						},
						"description": "Return washing machine information by id, id should always be 1 since there is only 1 washing machine available"
					},
					"response": []
				},
				{
					"name": "Get Washing Machine Statistics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/statistics",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"statistics"
							]
						},
						"description": "Return washing machine statistics since last reset:  \n\\- Total time switched on (unit: second)  \n\\- Amount of money earned (unit: cent)\n\nOnly return when washing machine is in **maintenance mode** state, else return error message\n\nquery parameter:\n\n**job_completed**  \nboolean, not required  \nset to **true** returns statistics calculated based on **completed** jobs only  \nset to false returns statistics calculated based on **incompleted** jobs only  \nomitting this parameter returns statistics calculated based on **all** jobs"
					},
					"response": []
				},
				{
					"name": "Power On Washing Machine",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/power_on",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"power_on"
							]
						},
						"description": "To turn on the washing machine, request will only success when washing machine is in **off** state, else return error message\n\nNo body parameter"
					},
					"response": []
				},
				{
					"name": "Power Off Washing Machine",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/power_off",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"power_off"
							]
						},
						"description": "To turn off the washing machine, request will only success when washing machine is **not** in **off** state, else return error message\n\nNo body parameter\n\nWill return refund_value_cent if washing machine has inserted value when turn off"
					},
					"response": []
				},
				{
					"name": "Open Washing Machine Door",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/open_door",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"open_door"
							]
						},
						"description": "To open washing machine door, request will only success when washing machine door is **closed** and there is no ongoing job, else return error message\n\nNo body parameter"
					},
					"response": []
				},
				{
					"name": "Close Washing Machine Door",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/close_door",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"close_door"
							]
						},
						"description": "To close washing machine door, request will only success when washing machine door is **open**, else return error message\n\nNo body parameter"
					},
					"response": []
				},
				{
					"name": "Select Wash Type",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"wash_type\": \"Quick Wash\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/select_wash_type",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"select_wash_type"
							]
						},
						"description": "To select wash type when washing machine is in **idle** state, and wash_type must be one of the available wash type retrieve from Get Available Wash Types endpoint, else return error message"
					},
					"response": []
				},
				{
					"name": "Insert Coin",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"coin_value_cent\":100\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/insert_coin",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"insert_coin"
							]
						},
						"description": "To increase inserted value when washing machine is in **wash type selected** state, and coin_value_cent must be one of the available coin type retrieve from Get Accepted Coin Types endpoint, else return error message"
					},
					"response": []
				},
				{
					"name": "Start Wash",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/start_wash",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"start_wash"
							]
						},
						"description": "To start wash job when washing machine is in **pending start** state, and door must be **closed**, else return error message  \nNo body parameter  \nReturn refund_value_cent if inserted value is more than required value"
					},
					"response": []
				},
				{
					"name": "Cancel Wash",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/cancel_wash",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"cancel_wash"
							]
						},
						"description": "To cancel wash job when washing machine is in **wash type selected / pending start / pending continue** state, else return error message  \nNo body parameter  \nWill return refund_value_cent if washing machine has inserted value when cancel job"
					},
					"response": []
				},
				{
					"name": "Continue Wash",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/cancel_wash",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"cancel_wash"
							]
						},
						"description": "To cancel wash job when washing machine is in **pending continue** state, else return error message  \nNo body parameter"
					},
					"response": []
				},
				{
					"name": "Enter Maintenance Mode",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/enter_maintenance_mode",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"enter_maintenance_mode"
							]
						},
						"description": "To enter maintenance mode when washing machine is in **idle** state, else return error message  \nNo body parameter"
					},
					"response": []
				},
				{
					"name": "Exit Maintenance Mode",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/exit_maintenance_mode",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"exit_maintenance_mode"
							]
						},
						"description": "To enter maintenance mode when washing machine is in **maintenance mode** state, else return error message  \nNo body parameter"
					},
					"response": []
				},
				{
					"name": "Reset Statistics",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/washing_machine/1/reset_statistics",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"washing_machine",
								"1",
								"reset_statistics"
							]
						},
						"description": "To reset statistics when washing machine is in **maintenance mode** state, else return error message  \nNo body parameter"
					},
					"response": []
				}
			]
		},
